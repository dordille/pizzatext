@import 'nib'
width = 600px
height = 300px

body
  margin: 0
  padding: 0
  background: url('/images/pizza.png')

.home-view
  min-width: 900px

  p
    margin-bottom: 2.5rem

.front
  position: absolute

.back
  background: #000
  width: 100%
  height: 100%
  position: absolute
  transform: rotateY( 180deg )

.scene
  width: width
  height: height
  margin: auto
  margin-top: 100px
  text-align: center
  transform-style: preserve-3d
  transition: transform 1s
  border: 1px solid white

.scene > div
  backface-visibility: hidden

.bake
  position: absolute

.scene.flipped
  transform: rotateY( 180deg )

.canvas
  display: inline-block
  width: width
  height: height
  background: #2c4762
  margin: auto

.scratch
  position: absolute

.view.gif
  width: width
  height: height
  display: inline-block
  margin: auto
  
.progress
  background: #000
  width: 100%
  height: 100%
  margin: auto

@-webkit-keyframes rotating
  from{
    -webkit-transform: rotate(0deg);
  }
  to{
    -webkit-transform: rotate(360deg);
  }

.progress .pie
  width:200px;
  height:200px;
  margin: auto
  

.progress .pizza
  content: ""
  position: absolute
  right: 200px;
  top: 50px;
  width: 200px
  height: 200px
  background: url('/images/progress.png') no-repeat
  background-size: 100%
  -webkit-animation: rotating 2s linear infinite;

.progress .percent
  position: absolute
  top: 100px
  right: 200px
  width: 200px
  height: 200px
  
  color: white
  font-family: helvetica
  font-weight: bold
  font-size: 64px
  
.done .progress
  display: none

.controls
  width: width
  background: black
  margin: auto
  padding: 20px
  box-sizing: border-box

.start-button
  float: left

.tumblr_share
  position: absolute
  right: 0px
  display:inline-block
  text-indent:-9999px
  overflow:hidden
  width:129px
  height:20px
  background:url('http://platform.tumblr.com/v1/share_3.png') top left no-repeat transparent

.controls > a
  float: left
  margin-bottom: 20px

.controls .row
  display: table
  margin-bottom: 15px
  width: 100%
  text-align: center

.controls .row > a
  display: table-cell
  width: width - 40

a.pizza_button
  font-family: helvetica
  padding-left: 35px
  line-height: 28px
  font-size: 24px
  text-decoration: none
  color: white

a:hover
  cursor: pointer
  text-shadow: grey 0.1em 0.1em 0.2em

a.pizza_button:before
  content: ""
  margin-left: -35px
  position: absolute
  width: 30px
  height: 30px
  background: url('/images/progress.png') no-repeat
  background-size: 100%
  opacity: .5

a.pizza_button.active:before
  opacity: 1
  -webkit-animation: rotating 2s linear infinite;

.controls > .row.last
  margin-top: 25px

.row.textures
  margin-top: 25px

.row.textures > a
  text-align: center

a.pizza_texture
  opacity: .50

a.pizza_texture.active
  opacity: 1
  
a.pizza_texture img
  width: 50px
  height: 50px
  border-radius: 50%

a.bake
  font-family: helvetica
  line-height: 28px
  font-size: 24px
  text-decoration: none
  color: white
  text-align: center

a.bake:before,
a.bake:after
  content: ""
  position: absolute
  width: 30px
  height: 30px
  top: 0px
  background: url('/images/progress.png') no-repeat
  background-size: 30px

a.bake:hover:before,
a.bake:hover:after
  -webkit-animation: rotating 2s linear infinite;

a.bake:before
  left: 200px

a.bake:after
  right: 200px

body
  background-image: url('/images/arrow.jpeg')
  background-position: 0px 0px
  background-repeat: repeat

.row .text
  text-align: center
  width: 80%
  font-family: helvetica
  font-size: 20px
  color: #FFF
  background: #000




